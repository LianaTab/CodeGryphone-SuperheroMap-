{
  "name": "superheromap",
  "version": "0.0.1",
  "description": "SuperheroMap monorepo containing mobile (Expo), web (Next.js), and backend (NestJS) apps with shared packages.",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "lint": "eslint --max-warnings=0 --ext .js,.jsx,.ts,.tsx apps packages",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "pnpm -r run test --if-present",
    "clean": "pnpm -r run clean --if-present",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,less,yml,yaml}": [
      "prettier --write"
    ]
  }
}
